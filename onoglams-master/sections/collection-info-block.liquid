<section class="info-block sectionPaddingBottom">
    <div class="container">
        <div class="info-container">
            <div class="info-image collection-info-image"></div>
            <div class="info-description">
                <h2 data-aos="fade-up">{{ section.settings.collection_info_title }}</h2>
                <p data-aos="fade-up" data-aos-delay="100">{{ section.settings.collection_info_text }}</p>
                <a data-aos="fade-up" data-aos-delay="200" href="/pages/about">
                    <button class="btn-green invert-btn-green">
                        Learn More
                        <span class="svg svg-green">
                            {% include 'button-svg' %}
                        </span>
                    </button>
                </a>
            </div>
        </div>
    </div>
</section>

{% schema %}

{
    "name": "Collection Info Block",
    "settings": [
        {
            "type": "text",
            "id": "collection_info_title",
            "label": "Title",
            "default": "Why Onoglams?",
            "placeholder": "Change Title Here..."
        }, {
            "type": "textarea",
            "id": "collection_info_text",
            "label": "Description",
            "default": "Our easiest chuck-on-and-go staples come with a serious style heritage that’s liberating, sexy, comfy and supremely cool. Our easiest chuck-on-and-go staples come with a serious style heritage that’s liberating, sexy, comfy and supremely cool.",
            "placeholder": "Change Description Here..."
        }, {
            "type": "text",
            "id": "collection_info_button",
            "label": "Info Button Text",
            "default": "Learn More",
            "placeholder": "Change Button Here..."
        }
    ]
}

{% endschema %}
