<nav class="navbar">
    <div class="container">
        <div class="navbar-container">
            <div class="navlinks">
                <a class="menuLinks" href="/collections/all">Shop</a>
                <a class="menuLinks" href="/pages/about">About</a>
            </div>

            <a class="logo" href="/">{{ 'logo.png' | asset_url | img_tag: 'Logo' }}</a>

            <div class="navlinks">
                {% if shop.customer_accounts_enabled %}
                    {% if customer %}
                        <a href="/account">Account</a>
                    {% else %}
                        {{ "Sign in" | customer_login_link }}
                    {% endif %}
                {% endif %}
                <a class="navBag" href="/cart">Bag ({{ cart.item_count }})</a>
            </div>

            <div class="burger" id="burger" onclick="openMenu()">
                <div></div>
                <div></div>
                <div></div>
            </div>
        </div>
    </div>
</nav>
<div class="mobile-menu" id="menu" style="max-height: 0px; transition: all 0.15s ease-in;">
    <a class="menuLinks" href="/collections/all">Shop</a>
    <a class="menuLinks" href="/pages/about">About</a>
    {% if shop.customer_accounts_enabled %}
        {% if customer %}
            <a href="/account">Account</a>
        {% else %}
            {{ "Sign in" | customer_login_link }}
        {% endif %}
    {% endif %}
    <a class="navBag" href="/cart">Bag ({{ cart.item_count }})</a>
</div>

<script>
    const burger = document.getElementById('burger')
    const menu = document.getElementById('menu')

    openMenu = () => {
            if (menu.style.maxHeight === "0px") {
                menu.style.maxHeight = "300px";
                burger.classList.add("clicked");
            } else {
                menu.style.maxHeight = "0px";
                burger.classList.remove("clicked");
            }
    }

</script>
